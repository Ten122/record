<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_main_src"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/image3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_main_src"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/item_main_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟酒茶"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_main_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟酒茶"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/item_main_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 30"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_main_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天 8:00"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>